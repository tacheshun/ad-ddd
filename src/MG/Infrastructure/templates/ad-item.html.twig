<div class="row ad-row">
    <div class="col-xs-12 col-sm-12 col-md-1">
        <img class="ad-image" src="/components/flat-ui/images/icons/svg/mail.svg" alt="Send email to...">
    </div>
    <div class="col-xs-12 col-sm-8 col-md-9">
        ...send a <strong>message</strong><br/>
        to <strong>{{ ad.telephone }}</strong><br/>
        for the ad <strong>{{ ad.content }}</strong>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-2">
        {% if showOptions is defined and showOptions %}
            <a class="btn btn-primary btn-block" href="{{ path('view-ad', { adid: ad.id}) }}"><span class="fui-trash">Edit</span></a>
            <a class="btn btn-primary btn-block btn-danger" href="{{ path('delete-ad', { adid: ad.id}) }}"><span class="fui-trash">Delete</span></a>
        {% endif %}
    </div>
</div>
