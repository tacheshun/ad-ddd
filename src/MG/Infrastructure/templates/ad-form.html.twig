{% if ad is defined %}
<form method="post" action="{{ route }}">
    <input type="hidden" class="form-control" name="id" value="{{ wish.id }}" /><br/>
    To: <input class="form-control" placeholder="my-son@gmail.com" name="email" type="text" maxlength="255" value="{{ ad.address }}"/><br/>
    Message:<br/><textarea class="form-control" placeholder="If you are reading this..." name="content" type="text">{{ ad.content }}</textarea> <br/>
    <button type="submit" class="btn btn-default">Update my wish</button>
</form>
{% else %}
<form method="post" action="{{ route }}">
    To: <input class="form-control" placeholder="my-son@gmail.com" name="email" type="text" maxlength="255"/><br/>
    Message:<br/><textarea class="form-control" placeholder="If you are reading this..." name="content" type="text"></textarea> <br/>
    <button type="submit" class="btn btn-primary">Create an ad (Non aggregate version)</button>
</form>
{% endif %}
