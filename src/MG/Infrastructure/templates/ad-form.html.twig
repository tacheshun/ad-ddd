{% if ad is defined %}
<form method="post" action="{{ route }}">
    <input type="hidden" class="form-control" name="id" value="{{ ad.id }}" /><br/>
    Reach me at: <input class="form-control" placeholder="ion@tiriac.ro" name="email" type="text" maxlength="255" value="{{ ad.telephone }}"/><br/>
    Ad Message:<br/><textarea class="form-control" placeholder="If you are interested in this property then..." name="content" type="text">{{ ad.content }}</textarea> <br/>
    <button type="submit" class="btn btn-default">Update my ad</button>
</form>
{% else %}
<form method="post" action="{{ route }}">
    Reach me at: <input class="form-control" placeholder="ion@tiriac.ro" name="email" type="text" maxlength="255"/><br/>
    Ad Message:<br/><textarea class="form-control" placeholder="If you are interested in this property then..." name="content" type="text"></textarea> <br/>
    <button type="submit" class="btn btn-primary">Create an ad</button>
</form>
{% endif %}
