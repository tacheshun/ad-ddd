{% extends '@infra/layout.html.twig' %}

{% block content %}

    <p class="lead">My published ads</p>
    {% if ads is defined %}
        {% for ad in ads %}
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-1">
                    <img class="ad-image" src="/../bower_components/flat-ui/images/icons/svg/mail.svg" alt="Send email to...">
                </div>
                <div class="col-xs-12 col-sm-8 col-md-9">
                    {{ ad.content }}<br/>
                    Send your offers to <strong>{{ ad.telephone }}</strong>
                </div>

                <div class="col-xs-12 col-sm-4 col-md-2">
                        <a class="btn btn-primary btn-block" href="{{ path('view-ad', { adid: ad.id}) }}"><span class="fui-trash">Edit</span></a>
                        <a class="btn btn-primary btn-block btn-danger" href="{{ path('delete-ad', { adid: ad.id}) }}"><span class="fui-trash">Delete</span></a>
                </div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-xs-12">
                    ...no ads.
                </div>
            </div>
        {% endfor %}
    {% endif %}
    <br/>
{% if ads is defined %}
    <p class="lead">You have {{ ads|length }} ads.</p>
{% else %}
    <p class="lead">You have 0 ads :(</p>
{% endif %}
    <div class="row">
        <div class="col-xs-12">
            {% include "@infra/ad-form.html.twig" with {route: path('create-ad')} %}
        </div>
    </div>

    <br/>
    <p class="lead">My hard working earned badges...</p>
    {% if badges is defined %}
        {% for badge in badges %}
            {% include 'badge-item.html.twig' with {badge: badge} %}

        {% endfor %}
    {% else %}
        <div class="row">
            <div class="col-xs-12">
                No badges, for now.
            </div>
        </div>
    {% endif %}
{% endblock %}
